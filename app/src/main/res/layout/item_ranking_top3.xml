<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:background="@drawable/bg_contribution_bar"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/tvRanking"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="3위"
        android:textColor="@color/white"
        android:backgroundTint="@color/WinnerFit_lightPurple"
        android:fontFamily="@font/poppins_bold"
        android:textSize="19sp"
        android:background="@drawable/bg_circle"
        android:includeFontPadding="false"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="위너핏대학교"
        android:textSize="17sp"
        android:textColor="@color/WinnerFit_purple"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/tvRanking"
        app:layout_constraintEnd_toStartOf="@id/tvScore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="12,523점"
        android:textSize="15sp"
        android:textColor="@color/WinnerFit_purple"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>