<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myPageRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D">

    <!-- Back 버튼 -->
    <LinearLayout
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/ivBackIcon"
            android:layout_width="9dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_back"
            app:tint="@color/WinnerFit_yellow" />

        <TextView
            android:id="@+id/tvBackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="14dp"
            android:includeFontPadding="false"
            android:textColor="@color/WinnerFit_yellow"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- 수정하기 버튼 -->
    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:textSize="14sp"
        android:textColor="@color/WinnerFit_yellow"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp" />

    <!-- 상단 배경 -->
    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/WinnerFit_lightPurple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEdit" />

    <!-- 프로필 아이콘 -->
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/bgTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="컴공이"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile" />

    <!-- 학교 및 학과 -->
    <TextView
        android:id="@+id/tvMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="동국대학교 컴퓨터AI학과"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bgTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <!-- ScrollView for input fields -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMajor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <include layout="@layout/view_profile_input" android:id="@+id/input_nickname" />
            <include layout="@layout/view_profile_input" android:id="@+id/input_email" />
            <include layout="@layout/view_profile_input" android:id="@+id/input_weight" />
            <include layout="@layout/view_profile_input" android:id="@+id/input_height" />
            <include layout="@layout/view_profile_input" android:id="@+id/input_gender" />
            <include layout="@layout/view_profile_input" android:id="@+id/input_birth" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>