<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginVertical="14dp"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="15dp"
    android:background="@drawable/bg_border_rounded">

    <!-- 왼쪽 아이콘과 텍스트 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/tvTierLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="티어"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_bold" />

        <ImageView
            android:id="@+id/ivTierIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="-2dp"
            android:src="@drawable/ic_tier_silver" />

    </LinearLayout>

    <!-- 세로 구분선 -->
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="16dp" />

    <!-- 오른쪽 텍스트 + 프로그레스 바 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTierStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="골드 덤벨까지 남은 단계 (67%)"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="3dp" />

        <!-- 배경 바 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/bg_tier_progress_bar">

            <!-- 진행 바 -->
            <View
                android:id="@+id/viewTierProgress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_tier_progress" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>