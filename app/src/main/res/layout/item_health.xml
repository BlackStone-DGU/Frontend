<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/healthFeed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_box"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/imageExercise"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginVertical="17dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_run_mission"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스쿼트 20개"
        android:textColor="@color/WinnerFit_black"
        android:textSize="17sp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/imageExercise"
        app:layout_constraintTop_toTopOf="@id/imageExercise"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tvCnt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="아직 시작하지 않았어요!"
        android:textColor="#9A9E49"
        android:fontFamily="@font/poppins_bold"
        android:textSize="11sp"
        android:includeFontPadding="false"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvDeclaration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:minLines="2"
        android:text="스쿼트는 하체 근력과 코어 안정성을 강화하는 대표적인 전신 운동입니다."
        android:textColor="@color/WinnerFit_black"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/ivIdle"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <ImageView
        android:id="@+id/ivIdle"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_play"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
