<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_box"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imageExercise"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_run_mission"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="null" />

    <TextView
        android:id="@+id/textExerciseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="스쿼트 20개"
        android:textColor="@color/WinnerFit_black"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toEndOf="@id/imageExercise"
        app:layout_constraintTop_toTopOf="@id/imageExercise"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/textExerciseTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="약 3분 소요"
        android:textColor="@color/WinnerFit_gray"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintTop_toBottomOf="@id/textExerciseName"
        app:layout_constraintStart_toStartOf="@id/textExerciseName"
        app:layout_constraintEnd_toEndOf="@id/textExerciseName"
        android:layout_marginTop="2dp" />

    <ImageView
        android:id="@+id/imageArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
