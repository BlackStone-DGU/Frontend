<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- "로그인" 텍스트 -->
        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/WinnerFit_yellow"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="55dp" />

        <!-- "환영합니다!" -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환영합니다!"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="146dp" />

        <!-- "WinnerFit" 로고 -->
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WinnerFit"
            android:textColor="@color/WinnerFit_purple"
            android:textSize="40sp"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:layout_marginTop="7dp" />

        <!-- "오늘도 위너핏과 함께 베네핏!" -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000님, 회원가입을 축하합니다!\n오늘도 위너핏과 함께 베네핏\n받고 운동하러 가볼까요?"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_light" />



        <!-- 로그인 버튼 -->
        <LinearLayout
            android:id="@+id/btnLogin"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/btn_black_rounded"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="45dp">

            <TextView
                android:id="@+id/tv_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_bold" />
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#FFFFFF" />


    </LinearLayout>
</ScrollView>