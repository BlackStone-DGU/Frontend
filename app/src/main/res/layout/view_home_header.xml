<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WinnerFit_deepPurple"
    android:paddingTop="18dp"
    android:paddingHorizontal="15dp">

    <!-- 왼쪽 텍스트 영역 -->
    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리가 달려온 시간"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/tvDday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D+120"
        android:textColor="@android:color/white"
        android:textSize="80sp"
        android:layout_marginTop="-25dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="@id/tvHeaderTitle"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle" />

    <!-- 오른쪽 달리는 사람 아이콘 -->
    <ImageView
        android:layout_marginStart="8dp"
        android:id="@+id/ivHeaderIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_run"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDday"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>